<link rel="stylesheet" href="/stylesheets/style.css" />
<!-- views/partials/_navbar.ejs -->

<nav class="main-navbar">
  <div class="navbar-left">
    <a href="/" class="navbar-title">My Game Collection</a>
  </div>
  <div class="navbar-right">
    <% if(user) { %>
      <form action="/users/<%= user._id %>/games/search" method="GET" class="search-form">
        <input type="text" name="query" placeholder="Search games..." required>
        <button type="submit" class="navbar-button">Search</button>
      </form>
      <a href="/auth/sign-out" class="navbar-link">Sign Out</a>
    <% } else { %>
      <a href="/auth/sign-in" class="navbar-link">Sign In</a>
      <a href="/auth/sign-up" class="navbar-link">Sign Up</a>
    <% } %>
  </div>
</nav>

  