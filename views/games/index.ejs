<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Your Game Collection</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Your Game Collection</h1>
    <a href="/users/<%= user._id %>/games/new">Add a New Game</a>
    <!-- Display the user's game collection -->
    <ul>
      <% if (Array.isArray(games) && games.length > 0) { %>
        <% games.forEach((game) => { %>
          <li>
            <a href="/users/<%= user._id %>/games/<%= game._id %>">
              <%= game.title %> on <%= game.platform %>
            </a>
            - Playtime: <%= game.playtime %> hours, Status: <%= game.status %>
            <div>
              <img src="<%=game.image%>" />
            </div>
          </li>
        <% }) %>
      <% } else { %>
        <li>No games in your collection yet. </li>
      <% } %>
    </ul>
  </body>
</html>

